/* USER CODE BEGIN PFP */
void DrawCamScreen(const uint16_t *image, const char *text);
void transmit_uart(const char *string);
void read_color_sensor(uint8_t *r, uint8_t *g, uint8_t *b);

/* USER CODE END PFP */

/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void DrawCamScreen(const uint16_t *image, const char *text)
{
    //Limpiar la pantalla con fondo negro 
    LCD_Clear(0x0000);

    //Título
    int title_x = (LCD_WIDTH - TITLE_W) / 2;
    int title_y = 0;
    LCD_Bitmap(title_x, title_y, TITLE_W, TITLE_H, titulo);

    //Camaleón por defaulr
    int cam_x = (LCD_WIDTH - CAM_W) / 2;
    int cam_y = LCD_HEIGHT - CAM_H - 5; //centrado abajo
    LCD_Bitmap(cam_x, cam_y, CAM_W, CAM_H, image);

    //Escritura de texto de c, r, g y b 
    if (text != NULL) {
        LCD_Print((char*)text, 10, TITLE_H + 8, 1, 0xFFFF, 0x0000); //Escribir sobre el fondo y debajo del título
    }
}
/* USER CODE END 0 */

/**
  * @brief  The application entry point.
  * @retval int
  */
int main(void)
{

  /* USER CODE BEGIN 1 */

  /* USER CODE END 1 */

  /* MCU Configuration--------------------------------------------------------*/

  /* Reset of all peripherals, Initializes the Flash interface and the Systick. */
  HAL_Init();

  /* USER CODE BEGIN Init */

  /* USER CODE END Init */

  /* Configure the system clock */
  SystemClock_Config();

  /* USER CODE BEGIN SysInit */

  /* USER CODE END SysInit */

  /* Initialize all configured peripherals */
  MX_GPIO_Init();
  MX_SPI1_Init();
  MX_USART2_UART_Init();
  MX_FATFS_Init();
  MX_USART3_UART_Init();
  /* USER CODE BEGIN 2 */
  //Inicializar pantalla
   LCD_Init();
   DrawCamScreen(Cam01, lineText); //Dibujo en estado de inicialización esperando solicitud de datos

   //UART de ESP32
   HAL_UARTEx_ReceiveToIdle_IT(&huart3, rxBuf, sizeof(rxBuf));
   char hello[] = "\r\n[STM32] Presiona el boton para leer el sensor.\r\n";
   HAL_UART_Transmit(&huart2, (uint8_t*)hello, strlen(hello), 100);
  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
  while (1)
  {
      uint8_t current_button_state = HAL_GPIO_ReadPin(BTN2_GPIO_Port, BTN2_Pin);

      if (last_button_state == 1 && current_button_state == 0) //Bajada
      {
          uint8_t r, g, b;
          read_color_sensor(&r, &g, &b);

          //Montar SD
          fres = f_mount(&fs, "", 0);
          if (fres != FR_OK) {
              transmit_uart("Error mounting SD card.\r\n");
          }

          //Abrir el archivo colors.txt
          fres = f_open(&fil, "colors.txt", FA_OPEN_ALWAYS | FA_WRITE);
          if (fres == FR_OK)
          {
              sprintf(buffer, "Color -> R: %d, G: %d, B: %d\r\n", r, g, b);
              UINT bw;
              f_write(&fil, buffer, strlen(buffer), &bw);
              f_close(&fil);
              transmit_uart(buffer); //Envío de buffer por UART
          }
          else
          {
              transmit_uart("Error opening file on SD.\r\n");
          }

          f_mount(NULL, "", 1); //Desmontar SD si hay error
      }

      last_button_state = current_button_state;
      HAL_Delay(60);

      if (rxDone) {

          //Fin de la cadena
          if (rxLen >= sizeof(rxBuf)) {
              rxLen = sizeof(rxBuf) - 1;
          }
          rxBuf[rxLen] = '\0';

          //Variables C, R, G, B en el serial monitor y pantalla
          int C = 0, R = 0, G = 0, B = 0;

          //Parseo de [READ] y datos de colores
          int n = sscanf((char *)rxBuf,
                         "[READ] C=%d  R=%d  G=%d  B=%d",
                         &C, &R, &G, &B);
          const uint16_t *img = Cam01;  //default

          if (n == 4) {
              //Texto de la pantalla
              snprintf(lineText, sizeof(lineText),
                       "C=%d  R=%d  G=%d  B=%d", C, R, G, B);

              //Elección de que camaleón se muestra postlectura del sensor, el dato mayor
              if (R > G && R > B) {
                  img = CamR;
              } else if (G > R && G > B) {
                  img = CamG;
              } else if (B > R && B > G) {
                  img = CamB;
              } else {
                  img = Cam01;  //Dos datos son iguales o no hay color dominante
              }
          } else {
              //Mostrar lo que le llegó en caso de no parsear READ 
              size_t len = (rxLen < sizeof(lineText) - 1) ? rxLen : (sizeof(lineText) - 1);
              memcpy(lineText, rxBuf, len);
              lineText[len] = '\0';
          }

          //Redibujar la pantalla por default
          DrawCamScreen(img, lineText);

          //Mandar datos por el puerto 
          HAL_UART_Transmit(&huart2, rxBuf, rxLen, 100);
          char nl[] = "\r\n";
          HAL_UART_Transmit(&huart2, (uint8_t*)nl, strlen(nl), 100);

          rxDone = 0;
          HAL_UARTEx_ReceiveToIdle_IT(&huart3, rxBuf, sizeof(rxBuf));
      }

 }

}

    /* USER CODE END WHILE */

    /* USER CODE BEGIN 3 */

  /* USER CODE END 3 */
/**
  * @brief System Clock Configuration
  * @retval None
  */
void SystemClock_Config(void)
{
  RCC_OscInitTypeDef RCC_OscInitStruct = {0};
  RCC_ClkInitTypeDef RCC_ClkInitStruct = {0};

  /** Configure the main internal regulator output voltage
  */
  __HAL_RCC_PWR_CLK_ENABLE();
  __HAL_PWR_VOLTAGESCALING_CONFIG(PWR_REGULATOR_VOLTAGE_SCALE3);

  /** Initializes the RCC Oscillators according to the specified parameters
  * in the RCC_OscInitTypeDef structure.
  */
  RCC_OscInitStruct.OscillatorType = RCC_OSCILLATORTYPE_HSI;
  RCC_OscInitStruct.HSIState = RCC_HSI_ON;
  RCC_OscInitStruct.HSICalibrationValue = RCC_HSICALIBRATION_DEFAULT;
  RCC_OscInitStruct.PLL.PLLState = RCC_PLL_NONE;
  if (HAL_RCC_OscConfig(&RCC_OscInitStruct) != HAL_OK)
  {
    Error_Handler();
  }

  /** Initializes the CPU, AHB and APB buses clocks
  */
  RCC_ClkInitStruct.ClockType = RCC_CLOCKTYPE_HCLK|RCC_CLOCKTYPE_SYSCLK
                              |RCC_CLOCKTYPE_PCLK1|RCC_CLOCKTYPE_PCLK2;
  RCC_ClkInitStruct.SYSCLKSource = RCC_SYSCLKSOURCE_HSI;
  RCC_ClkInitStruct.AHBCLKDivider = RCC_SYSCLK_DIV1;
  RCC_ClkInitStruct.APB1CLKDivider = RCC_HCLK_DIV1;
  RCC_ClkInitStruct.APB2CLKDivider = RCC_HCLK_DIV1;

  if (HAL_RCC_ClockConfig(&RCC_ClkInitStruct, FLASH_LATENCY_0) != HAL_OK)
  {
    Error_Handler();
  }
}

/**
  * @brief SPI1 Initialization Function
  * @param None
  * @retval None
  */
static void MX_SPI1_Init(void)
{

  /* USER CODE BEGIN SPI1_Init 0 */

  /* USER CODE END SPI1_Init 0 */

  /* USER CODE BEGIN SPI1_Init 1 */

  /* USER CODE END SPI1_Init 1 */
  /* SPI1 parameter configuration*/
  hspi1.Instance = SPI1;
  hspi1.Init.Mode = SPI_MODE_MASTER;
  hspi1.Init.Direction = SPI_DIRECTION_2LINES;
  hspi1.Init.DataSize = SPI_DATASIZE_8BIT;
  hspi1.Init.CLKPolarity = SPI_POLARITY_LOW;
  hspi1.Init.CLKPhase = SPI_PHASE_1EDGE;
  hspi1.Init.NSS = SPI_NSS_SOFT;
  hspi1.Init.BaudRatePrescaler = SPI_BAUDRATEPRESCALER_8;
  hspi1.Init.FirstBit = SPI_FIRSTBIT_MSB;
  hspi1.Init.TIMode = SPI_TIMODE_DISABLE;
  hspi1.Init.CRCCalculation = SPI_CRCCALCULATION_DISABLE;
  hspi1.Init.CRCPolynomial = 10;
  if (HAL_SPI_Init(&hspi1) != HAL_OK)
  {
    Error_Handler();
  }
  /* USER CODE BEGIN SPI1_Init 2 */

  /* USER CODE END SPI1_Init 2 */

}

