SPI_HandleTypeDef hspi1;
FATFS fs;
FATFS *pfs;
FIL fil;
FRESULT fres;
DWORD fre_clust;
uint32_t totalSpace, freeSpace;

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

UART_HandleTypeDef huart2;
UART_HandleTypeDef huart3;

/* USER CODE BEGIN PV */
// UART ESP32
uint8_t rxBuf[128];
volatile uint16_t rxLen = 0;
volatile uint8_t rxDone = 0;

//Pantalla TFT

#define LCD_WIDTH   320
#define LCD_HEIGHT  240

#define CAM_W   120
#define CAM_H   93

#define TITLE_W 146
#define TITLE_H 76

char lineText[32] = "Esperando lectura...";
uint8_t last_button_state = 1;
char buffer[100]; //Guardar datos en SD y comunicación por UART 

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
